    <script>
        angular.module('Stock-CMS', []).controller('CustomerController', function ($scope, $http) {
            $scope.customers = [];
            $scope.currentCustomer = {};
            $scope.isEditing = false;
            var isProcessing = false;

            showLoader();

            // Load Customers
            $scope.loadCustomers = function () {
                $http.get('/Master/GetCustomers').then(function (response) {
                    $scope.customers = response.data;
                    hideLoader();
                }, function (error) {
                    console.error('Error loading customers:', error);
                    hideLoader();
                });
            };

            // Open Modal
            $scope.openCustomerModal = function (customer = null) {
                $scope.isEditing = !!customer;
                $scope.currentCustomer = customer ? angular.copy(customer) : {};
                $('#customerModal').modal('show');
            };

            // Save Customer
            $scope.saveCustomer = function () {
                if (isProcessing) return;
                isProcessing = true;
                const url = $scope.isEditing ? '/Master/UpdateCustomer/' + $scope.currentCustomer.id : '/Master/CreateCustomer';
                $http.post(url, $scope.currentCustomer).then(function (response) {
                    if (response.data.success) {
                        Swal.fire({
                            title: 'Success',
                            text: response.data.message || 'Operation successful!',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        });
                        $scope.loadCustomers();
                        $('#customerModal').modal('hide');
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            text: response.data.message || 'There was an issue adding the customer.',
                            icon: 'error',
                            confirmButtonText: 'Try Again'
                        });
                    }
                    isProcessing = false;
                }, function (error) {
                    Swal.fire({
                        title: 'Error',
                        text: 'An error occurred.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                    isProcessing = false;
                });
            };

            // Initial load
            $scope.loadCustomers();
        });
    </script>
