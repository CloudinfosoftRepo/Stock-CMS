                    <select class="form-select w-auto" ng-options="f.id as f.name for f in docs" ng-model="seletedid" ng-change="loadCustomers(seletedid)">
                        <option selected disabled value="">Select customer</option>
                    </select>
                </div>
                @* </div> *@
                <div class="text-center m-2 col-md-4">
                    <button type="submit" class="btn" style="background-color:#003980; color:white;">
                        Genrate Form
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div id="printForm">
    <h1
      style="
        padding: 0 250px 0 12pt;
        text-indent: 0pt;
        line-height: 20pt;
        text-align: left;
      "
    >
            {{data.firstHolder}},
            {{data.secondHolder}},
            {{data.thirdHolder}}
    </h1>
    <p
      class="s1"
      style="padding: 0 330px 0 12pt; text-indent: 0pt; text-align: left"
    >
            {{data.address}}
    </p>
    <p
      class="s1"
      style="padding-left: 12pt; text-indent: 0pt; text-align: left"
    >
            M. No. {{data.mobile}}
    </p>
    <p style="text-indent: 0pt; text-align: left"><br /></p>
    <p
      style="
        padding-left: 12pt;
        text-indent: 0pt;
        line-height: 1pt;
        text-align: left;
      "
    />
    <p style="text-indent: 0pt; text-align: center">
      Self -Declaration (FOR CHANGE OF SIGNATURE)
    </p>
    <hr style="border: none; height: 2px; background-color: black;">
    <div style="display: flex; justify-content: space-between;padding:6px 0 6px 0px;">
      <h3 style="padding-top: 1pt; padding-left: 5pt; text-indent: 0pt; text-align: left;">
        TO,
      </h3>
      <p style="padding-top: 1pt; padding-left: 5pt; text-indent: 0pt; text-align: right;">
                Date:{{data.date | date:'dd/MM/yyyy'}}
      </p>
    </div>

    <h3
      style="
        padding-top: 12pt;
        padding-left: 12pt;
        text-indent: 0pt;
