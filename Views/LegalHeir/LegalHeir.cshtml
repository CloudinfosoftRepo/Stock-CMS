                        $http.post('/LegalHeir/UpdateLegalHeirbyColumn', docId).then(function (response) {
                            Swal.fire({
                                title: response.data.success ? 'Deleted!' : 'Error',
                                text: response.data.success ? 'Legal Heir has been deleted.' : 'An error occurred.',
