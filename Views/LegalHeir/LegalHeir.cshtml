                        confirmButtonText: 'OK'
                    });
                          isProcessing = false;
                    $scope.loadDocs();
                    $('#docModal').modal('hide');
                });
                    }
            };

            $scope.deleteLegalHeir = function (docId) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'No, keep it'
                }).then((result) => {
