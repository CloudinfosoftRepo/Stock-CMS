            //             $('#companyModal').modal('hide');
            //         } else {
            //             Swal.fire({
            //                 title: 'Error!',
            //                 text: response.data.message || 'There was an issue adding the company.',
            //                 icon: 'error',
            //                 confirmButtonText: 'Try Again'
            //             });
            //         }
            //         isProcessing = false;
            //     }, function (error) {
            //         Swal.fire({
            //             title: 'Error',
            //             text: 'An error occurred.',
            //             icon: 'error',
            //             confirmButtonText: 'OK'
            //         });
            //         isProcessing = false;
            //     });
